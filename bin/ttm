#!/bin/bash
cd `dirname $0`
PROGNAME=$(basename $0)
VERSION="1.3"

usage() {
    echo "Usage: $PROGNAME [OPTIONS]"
    echo
    echo "Options:"
    echo "  [-h, --help] [--version] "
    echo "  [-s,--start] [-e,--end] [-c,--calculate]"
    echo "  [-rmal]"
    exit 1
}

for OPT in "$@"
do
    case "$OPT" in
        '-h'|'--help' )
            usage
            exit 1
            ;;
        '--version' )
            echo "ver.$VERSION"
            exit 1
            ;;
        '-s'|'--start' )
            ../build/start.py
            exit 1;;
        '-e'|'--end' )
            ../build/end.py
            exit 1;;
        '-c'|'--calculate' )
            ../build/calculate.py
            exit 1;;
        '--rmal' )
            ../build/rm_codord.py
            exit 1;;
        -*)
            echo "$PROGNAME: illegal option -- '$(echo $1 | sed 's/^-*//')'" 1>&2
            echo "Try '$PROGNAME --help' for more information." 1>&2
            exit 1;;
        *)
            if [[ ! -z "$1" ]] && [[ ! "$1" =~ ^-+ ]]; then
                #param=( ${param[@]} "$1" )
                param+=( "$1" )
                shift 2 #二つ前の処理に戻る
            fi
            ;;
    esac
done


######コマンドの引数（$@ にあたるもの）は param 変数に保持される##
